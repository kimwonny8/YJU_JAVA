package Main;

import java.util.Scanner;
//2101059 ±èÁ¤¿ø #2
public class StarTest {

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		
		for(int i=1; i<=n*(n/2); i++) {
			for(int j=1; j<=n; j++) {
				if(j<=i) System.out.print("*");
				else System.out.print(" ");
			}
			System.out.println();
		}
	}
}